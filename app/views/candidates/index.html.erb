<h1>Listing candidates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Party</th>
    <th>Age</th>
    <th>Bio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @candidates.each do |candidate| %>
  <tr>
    <td><%= candidate.name %></td>
    <td><%= candidate.party %></td>
    <td><%= candidate.age %></td>
    <td><%= candidate.bio %></td>
    <td><%= link_to 'Show', candidate %></td>
    <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
    <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

 <p>
  Download:
  <%= link_to "CSV", candidates_path(format: "csv") %> |
  <%= link_to "Excel", candidates_path(format: "xls") %> | 
  <%= link_to "ExcelX", candidates_path(format: "xlsx") %>
</p>


